<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilActivity">

    <RelativeLayout
        android:id="@+id/appBarProfil"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150mdp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprofil"
            android:layout_width="@dimen/_120mdp"
            android:layout_height="@dimen/_120mdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:src="@drawable/user"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/appBarProfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10mdp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_100mdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20mdp"
            >

            <ImageView
                android:id="@+id/imguser"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginRight="@dimen/_20mdp"
                android:src="@drawable/user"
                />

            <LinearLayout
                android:layout_toRightOf="@id/imguser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15font_mdp"
                    android:text="Nama"
                    />

                <TextView
                    android:id="@+id/tvnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nama saya"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20mdp">

            <ImageView
                android:id="@+id/tvtgllahir"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginRight="@dimen/_20mdp"
                android:background="@drawable/cake"/>

            <LinearLayout
                android:layout_toRightOf="@id/tvtgllahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15font_mdp"
                    android:text="Tanggal Lahir"
                    />

                <TextView
                    android:id="@+id/tvtgllahir2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02 September 1990"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20mdp">

            <ImageView
                android:id="@+id/imgjnskelamin"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginRight="@dimen/_20mdp"
                android:src="@drawable/gender"
                />

            <LinearLayout
                android:layout_toRightOf="@id/imgjnskelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15font_mdp"
                    android:text="Jenis Kelamin"
                   />

                <TextView
                    android:id="@+id/tvjnskelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="laki-laki"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_15mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20mdp">

            <ImageView
                android:id="@+id/imgalamat"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginRight="@dimen/_20mdp"
                android:background="@drawable/address"/>

            <LinearLayout
                android:layout_toRightOf="@id/imgalamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15font_mdp"
                    android:text="Alamat"
                    />

                <TextView
                    android:id="@+id/tvalamat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl.Sudirman no 190"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_15mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20mdp">

            <ImageView
                android:id="@+id/imgtelp"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginRight="@dimen/_20mdp"
                android:background="@drawable/smartphone"/>

            <LinearLayout
                android:layout_toRightOf="@id/imgtelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15font_mdp"
                    android:text="No. Telphone"
                    />

                <TextView
                    android:id="@+id/tvtelp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08908090800"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivedit"
            android:layout_marginTop="@dimen/_30mdp"
            android:layout_gravity="center"
            android:background="@drawable/ic_mode_edit"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"/>

    </LinearLayout>

</RelativeLayout>